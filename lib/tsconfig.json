{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "outDir": "./dist/",
    "jsx": "react-native",
    "jsxImportSource": "react",
    "declaration": true,
    "removeComments": false,

    /* JavaScript */
    "allowJs": true,

    /* Linting */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,

    /* Alias */
    "baseUrl": "./",
    "paths": {
      "react-native-webview": [ "./types/react-native-webview" ],
      "react-native": [ "./types/react-native/types" ],
    },
    
  },
  "include": ["src"],
}
